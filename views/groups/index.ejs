<%- include('../partials/navbar') %>

<div class="center">
  <h1>Groups</h1>
    <% if (user) { %>
      <h2>Create group</h2>
      <form action="/groups" method="post", enctype="multipart/form-data">
        <label for="name">Group name: </label>
        <input type="text" name="name" placeholder="Name" /> <br>
        <label for="description">Group description: </label>
        <input type="text" name="description" placeholder="Despctiption" /> <br>
        <label for="visibility">Visibility</label>
        <select name="visibility" id="visibility">
          <option value="2">Public</option>
          <option value="1">Registered users</option>
          <option value="0">Invite only</option>
        </select>
        <br>
        <label for="avatar">Avatar</label>
        <input type="file" name="avatar" placeholder="avatar"/> <br>
        <input type="submit" value="Create group" /> <br>
      </form>
    <% } %>

    <% for (let i = 0; i < groups.length; i++) { %>
        <div>
            <a href="/groups/<%= groups[i].id %>" >
            <h2><%= groups[i].name %></h2>
            </a>
            <p><%= groups[i].description %></p>
            <img src="/<%= groups[i].path_to_avatar %>" height="150px">
            <hr>
        </div>
    <% } %>
    </div>
</body>
</html>
